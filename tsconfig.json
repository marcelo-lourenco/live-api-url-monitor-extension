{
    "compilerOptions": {
        "module": "es2020",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["es2020"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "types": [
            "node",
            "mocha",
            "glob"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/views/webview"
    ]
}