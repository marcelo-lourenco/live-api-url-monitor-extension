{
    "name": "live-api-url-monitor",
    "displayName": "Live URL & API Monitor",
    "description": "Live monitor for your API endpoints and URLs. Check status, health, and availability in real-time, all within VS Code",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Testing",
        "Other"
    ],
    "keywords": [
        "url",
        "api",
        "monitor",
        "live",
        "status",
        "health",
        "check",
        "http",
        "https",
        "endpoint",
        "developer tool"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "urlMonitor.addItem",
                "title": "Add URL Item",
                "icon": "$(add)"
            },
            {
                "command": "urlMonitor.importCurl",
                "title": "Import cURL",
                "icon": "$(cloud-download)"
            },
            {
                "command": "urlMonitor.exportItems",
                "title": "Export Items",
                "icon": "$(git-stash-pop)"
            },
            {
                "command": "urlMonitor.importItems",
                "title": "Import Items",
                "icon": "$(git-stash)"
            },
            {
                "command": "urlMonitor.editItem",
                "title": "Edit URL Item",
                "icon": "$(edit)"
            },
            {
                "command": "urlMonitor.deleteItem",
                "title": "Delete URL Item",
                "icon": "$(trash)"
            },
            {
                "command": "urlMonitor.refreshList",
                "title": "Refresh List",
                "icon": "$(refresh)"
            },
            {
                "command": "urlMonitor.copyAsCurl",
                "title": "Copy as cURL",
                "icon": "$(copy)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "url-monitor",
                    "title": "URL Monitor",
                    "icon": "resources/monitor.svg"
                }
            ]
        },
        "views": {
            "url-monitor": [
                {
                    "id": "urlMonitor.list",
                    "name": "URL Monitor",
                    "contextualTitle": "URL Monitor",
                    "icon": "resources/monitor.png"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "urlMonitor.addItem",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@1"
                },
                {
                    "command": "urlMonitor.exportItems",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@2"
                },
                {
                    "command": "urlMonitor.importItems",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@3"
                },
                {
                    "command": "urlMonitor.importCurl",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@4"
                },
                {
                    "command": "urlMonitor.refreshList",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@5"
                }
            ],
            "view/item/context": [
                {
                    "command": "urlMonitor.editItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "inline"
                },
                {
                    "command": "urlMonitor.deleteItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "inline"
                },
                {
                    "command": "urlMonitor.copyAsCurl",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production",
        "lint": "eslint src --ext ts",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^16.11.7",
        "@types/uuid": "^8.3.4",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.13.0",
        "ts-loader": "^9.3.1",
        "typescript": "^4.7.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "axios": "^1.3.4",
        "url-parse": "^1.5.10",
        "uuid": "^8.3.2"
    }
}