{
    "name": "live-api-url-monitor",
    "displayName": "Live URL & API Monitor",
    "description": "Live monitor for your API endpoints and URLs. Check status, health, and availability in real-time, all within VS Code",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Testing",
        "Other"
    ],
    "keywords": [
        "url",
        "api",
        "monitor",
        "live",
        "status",
        "health",
        "check",
        "http",
        "https",
        "endpoint",
        "developer tool"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "urlMonitor.addItem",
                "title": "New Item",
                "icon": "$(add)"
            },
            {
                "command": "urlMonitor.addFolder",
                "title": "New Folder",
                "icon": "$(new-folder)"
            },
            {
                "command": "urlMonitor.exportItems",
                "title": "Export to JSON",
                "icon": "$(git-stash-pop)"
            },
            {
                "command": "urlMonitor.importItems",
                "title": "Import from JSON",
                "icon": "$(git-stash)"
            },
            {
                "command": "urlMonitor.importCurl",
                "title": "Import cURL",
                "icon": "$(cloud-download)"
            },
            {
                "command": "urlMonitor.exportFolder",
                "title": "Export Folder to JSON",
                "icon": "$(git-stash)"
            },
            {
                "command": "urlMonitor.editItem",
                "title": "Edit Item",
                "icon": "$(edit)"
            },
            {
                "command": "urlMonitor.deleteItem",
                "title": "Delete Item",
                "icon": "$(trash)"
            },
            {
                "command": "urlMonitor.refreshFolder",
                "title": "Refresh Folder",
                "icon": "$(refresh)"
            },
            {
                "command": "urlMonitor.renameFolder",
                "title": "Rename Folder"
            },
            {
                "command": "urlMonitor.deleteFolder",
                "title": "Delete Folder",
                 "icon": "$(trash)"
            },
            {
                "command": "urlMonitor.refreshItem",
                "title": "Refresh Item",
                "icon": "$(refresh)"
            },
            {
                "command": "urlMonitor.refreshList",
                "title": "Refresh All",
                "icon": "$(refresh)"
            },
            {
                "command": "urlMonitor.cutItem",
                "title": "Cut Item",
                "icon": "$(cut)"
            },
            {
                "command": "urlMonitor.copyItem",
                "title": "Copy Item",
                "icon": "$(copy)"
            },
            {
                "command": "urlMonitor.pasteItem",
                "title": "Paste Item",
                "icon": "$(paste)"
            },
             {
                "command": "urlMonitor.cutFolder",
                "title": "Cut Folder",
                "icon": "$(cut)"
            },
            {
                "command": "urlMonitor.copyFolder",
                "title": "Copy Folder",
                "icon": "$(copy)"
            },
            {
                "command": "urlMonitor.pasteFolder",
                "title": "Paste Folder",
                "icon": "$(paste)"
            },
            {
                "command": "urlMonitor.copyAsCurl",
                "title": "Copy as cURL",
                "icon": "$(copy)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "url-monitor",
                    "title": "Live URL & API Monitor",
                    "icon": "resources/monitor.svg"
                }
            ]
        },
        "views": {
            "url-monitor": [
                {
                    "id": "urlMonitor.list",
                    "name": "Live URL & API Monitor",
                    "icon": "resources/monito.png"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "urlMonitor.refreshList",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@1"
                },
                {
                    "command": "urlMonitor.addItem",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@2"
                },
                {
                    "command": "urlMonitor.addFolder",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@3"
                },
                {
                    "command": "urlMonitor.exportItems",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@4"
                },
                {
                    "command": "urlMonitor.importItems",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@5"
                },
                {
                    "command": "urlMonitor.importCurl",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@6"
                }
            ],
            "view/context": [
                {
                    "command": "urlMonitor.refreshList",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@1"
                },
                {
                    "command": "urlMonitor.addItem",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@2"
                },
                {
                    "command": "urlMonitor.addFolder",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@3"
                },
                {
                    "command": "urlMonitor.exportItems",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@4"
                },
                {
                    "command": "urlMonitor.importItems",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@5"
                },
                {
                    "command": "urlMonitor.importCurl",
                    "when": "view == urlMonitor.list",
                    "group": "navigation@6"
                }
            ],
            "view/item/context": [


                {
                    "command": "urlMonitor.refreshFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "1_actions@1"
                },
                {
                    "command": "urlMonitor.addItem",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "2_new@1"
                },
                {
                    "command": "urlMonitor.addFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "2_new@2"
                },
                {
                    "command": "urlMonitor.renameFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "3_edit@1"
                },
                {
                    "command": "urlMonitor.cutFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "4_clipboard@1"
                },
                {
                    "command": "urlMonitor.copyFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "4_clipboard@2"
                },
                {
                    "command": "urlMonitor.pasteFolder",
                    "when": "view == urlMonitor.list && url-monitor-extension.canPaste && viewItem == folder",
                    "group": "4_clipboard@3"
                },
                {
                    "command": "urlMonitor.exportFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "5_import_export@1"
                },
                {
                    "command": "urlMonitor.deleteFolder",
                    "when": "view == urlMonitor.list && viewItem == folder",
                    "group": "6_destructive@1"
                },


                
                

                {
                    "command": "urlMonitor.refreshItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "1_actions@1"
                },
                 {
                    "command": "urlMonitor.refreshItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "inline"
                },

                {
                    "command": "urlMonitor.editItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "2_edit@1"
                },


                {
                    "command": "urlMonitor.cutItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "3_clipboard@1"
                },
                {
                    "command": "urlMonitor.copyItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "3_clipboard@2"
                },
                {
                    "command": "urlMonitor.pasteItem",
                    "when": "view == urlMonitor.list && url-monitor-extension.canPaste && viewItem == urlItem",
                    "group": "3_clipboard@3"
                },
                {
                    "command": "urlMonitor.exportItems",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "4_import_export@1"
                },
                {
                    "command": "urlMonitor.copyAsCurl",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group": "4_import_export@2"
                },

                {
                    "command": "urlMonitor.deleteItem",
                    "when": "view == urlMonitor.list && viewItem == urlItem",
                    "group":"5_destructive@1"
                }
                
            ]
            
        },
        "context": [
            { "name": "url-monitor-extension.canPaste", "description": "Whether there is an item in the extension's clipboard to paste." }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production",
        "lint": "eslint src --ext ts",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^16.11.7",
        "@types/uuid": "^8.3.4",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.2.5",
        "ts-loader": "^9.3.1",
        "typescript": "^4.7.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "axios": "^1.3.4",
        "url-parse": "^1.5.10",
        "uuid": "^8.3.2"
    }
}